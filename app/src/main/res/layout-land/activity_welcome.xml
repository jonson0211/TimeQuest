<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/welcomebg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="241dp"
            android:layout_height="157dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tqlogo1" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="54dp"
            android:layout_height="91dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="208dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/romanwelcome" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_marginEnd="224dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/china" />

        <ImageView
            android:id="@+id/scrollArrow"
            android:layout_width="54dp"
            android:layout_height="86dp"
            android:layout_marginStart="40dp"

            android:layout_marginEnd="36dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sphinx" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:layout_marginEnd="172dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pyramids" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="54dp"
            android:layout_height="86dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="85dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sws" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="54dp"
            android:layout_height="86dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="1dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sphinx" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="261dp"
            android:text="Time Quest"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="46sp"
            app:fontFamily="@font/hyliaserifbetaregular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="54dp"
            android:layout_height="86dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="44dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:srcCompat="@drawable/sphinx" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="306dp"
            android:text="Enter your name:"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="18sp"
            app:fontFamily="@font/hyliaserifbetaregular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="54dp"
            android:layout_height="86dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toStartOf="@+id/ivPrize"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:srcCompat="@drawable/sws" />

        <ImageView
            android:id="@+id/npcCharacter"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="73dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/china" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="250dp"
            android:ems="12"
            android:fontFamily="@font/hyliaserifbetaregular"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/ivPrize"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="11dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toTopOf="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:srcCompat="@drawable/pyramids" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="54dp"
            android:layout_height="91dp"
            android:layout_marginEnd="12dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bStart"
            app:srcCompat="@drawable/romanwelcome" />

        <Button
            android:id="@+id/bStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="302dp"
            android:background="@drawable/quiz_buttons"
            android:fontFamily="@font/hyliaserifbetaregular"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="BEGIN ADVENTURE"
            android:textAlignment="center"
            android:textColor="#491F15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>