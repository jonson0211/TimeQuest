<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="623dp"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/profile_textviewbg"
        android:fontFamily="serif"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screenshot" />

    <ImageView
        android:id="@+id/screenshot"
        android:layout_width="195dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/instructionText"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/instructionText"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appscreenshotprofile" />
</androidx.constraintlayout.widget.ConstraintLayout>