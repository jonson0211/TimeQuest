<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speechNext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearningIntroActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@drawable/bgread2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/hyliaserifbetaregular"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLearningTitle" />

        <TextView
            android:id="@+id/tvLearningTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="60dp"
            android:fontFamily="@font/hyliaserifbetaregular"
            android:text="Title Text"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/tvYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/npcCharacter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="45dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintBottom_toTopOf="@+id/tvWelcomeMessage"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
            tools:srcCompat="@drawable/npcviking" />

        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/pokemonfont"
            android:letterSpacing="0.03"

            android:lineSpacingExtra="10dp"

            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Loading..."
            android:textColor="@color/colorPrimaryWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bContinue"
            android:layout_width="144dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/quiz_buttons"
            android:fontFamily="@font/pokemonfont"
            android:text="I'm ready!"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tvWelcomeMessage"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout3" />

        <ImageView
            android:id="@+id/scrollArrow"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginEnd="14dp"
            android:alpha="0.2"
            android:src="@android:drawable/arrow_down_float"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            app:layout_constraintBottom_toBottomOf="@+id/bContinue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/npcCharacter">

            <ImageView
                android:id="@+id/userBody"
                android:layout_width="156dp"
                android:layout_height="168dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/userHead"
                app:srcCompat="@drawable/bodydefault" />

            <ImageView
                android:id="@+id/userHand"
                android:layout_width="171dp"
                android:layout_height="173dp"
                app:layout_constraintBottom_toBottomOf="@+id/userHead"
                app:layout_constraintEnd_toEndOf="@+id/userHead"
                app:layout_constraintStart_toEndOf="@+id/userHead"
                app:layout_constraintTop_toBottomOf="@+id/userHead"
                app:srcCompat="@drawable/itemdefault" />

            <ImageView
                android:id="@+id/userHead"
                android:layout_width="108dp"
                android:layout_height="96dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/headdefault" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>