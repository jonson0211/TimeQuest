<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.question.QuestionPage">


    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Qing Dynasty"
        android:textColor="#9F5A06"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="408dp"
        android:layout_height="63dp"
        android:background="@drawable/quiz_button"
        android:text="CONFIRM"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/ivActor"
        android:layout_width="91dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTopic"
        tools:ignore="UnknownId"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:text="tvQuestion"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivActor"
        app:layout_constraintTop_toBottomOf="@+id/tvTopic"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:text="00:30"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTopic" />

    <RadioGroup
        android:id="@+id/radioG"
        android:layout_width="357dp"
        android:layout_height="288dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/buttonA"
            android:layout_width="313dp"
            android:layout_height="53dp"
            android:layout_margin="20dp"
            android:background="@drawable/quiz_button"
            android:text="Option 1"
            android:button="@null"
            android:gravity="center"
        />

        <RadioButton
            android:id="@+id/buttonB"
            android:layout_width="313dp"
            android:layout_height="53dp"
            android:layout_margin="20dp"
            android:background="@drawable/quiz_button"
            android:text="Option 2"
            android:button="@null"

            android:gravity="center"/>

        <RadioButton
            android:id="@+id/buttonC"
            android:layout_width="313dp"
            android:layout_height="53dp"
            android:layout_margin="20dp"
            android:background="@drawable/quiz_button"
            android:text="Option 3"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>